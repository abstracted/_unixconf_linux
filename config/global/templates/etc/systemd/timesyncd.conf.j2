[Time]
{% if timesyncd.ntp_servers is defined %}
NTP={{ timesyncd.ntp_servers | join(' ') }}
{% endif %}

{% if timesyncd.ntp_servers_fallback is defined %}
FallbackNTP={{ timesyncd.ntp_servers_fallback | join(' ') }}
{% endif %}

{% if timesyncd.root_distance_max_sec is defined %}
RootDistanceMaxSec={{ timesyncd.root_distance_max_sec }}
{% endif %}

{% if timesyncd.poll_interval_min_sec is defined %}
PollIntervalMinSec={{ timesyncd.poll_interval_min_sec }}
{% endif %}

{% if timesyncd.poll_interval_max_sec is defined %}
PollIntervalMaxSec={{ timesyncd.poll_interval_max_sec }}
{% endif %}
