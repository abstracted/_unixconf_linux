
default-fragment-size-msec = 10
default-fragments = 8
default-sample-format={{ audio.sample_format }}
default-sample-rate={{ audio.sample_rate }}
deferred-volume-safety-margin-usec = 1
flat-volumes = no
resample-method=speex-float-5

; allow-exit = yes
; allow-module-loading = yes
; cpu-limit = no
; daemonize = no
; default-channel-map = front-left,front-right
; default-sample-channels = 2
; default-script-file = /etc/pulse/default.pa
; deferred-volume-extra-delay-usec = 0
; dl-search-path = (depends on architecture)
; enable-deferred-volume = yes
; enable-lfe-remixing = no
; enable-remixing = yes
; enable-shm = yes
; exit-idle-time = 20
; fail = yes
; high-priority = yes
; load-default-script-file = yes
; local-server-type = user
; lock-memory = no
; log-backtrace = 0
; log-level = notice
; log-meta = no
; log-target = auto
; log-time = no
; nice-level = -11
; realtime-priority = 5
; realtime-scheduling = yes
; rlimit-as = -1
; rlimit-core = -1
; rlimit-data = -1
; rlimit-fsize = -1
; rlimit-locks = -1
; rlimit-memlock = -1
; rlimit-msgqueue = -1
; rlimit-nice = 31
; rlimit-nofile = 256
; rlimit-nproc = -1
; rlimit-rss = -1
; rlimit-rtprio = 9
; rlimit-rttime = 1000000
; rlimit-sigpending = -1
; rlimit-stack = -1
; scache-idle-time = 20
; shm-size-bytes = 0 # setting this 0 will use the system-default, usually 64 MiB
; system-instance = no
; use-pid-file = yes